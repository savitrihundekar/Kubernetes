
kubernetes installation steps:

- apt-get update
- apt-get install docker.io -y
- docker --version
- service docker restart
- curl -s https://packages.cloud.google.com/apt/doc/apt-key.gpg | apt-key add -
- echo "deb http://apt.kubernetes.io/ kubernetes-xenial main" >/etc/apt/sources.list.d/kubernetes.list
- apt-get update
- apt install kubeadm=1.20.0-00 kubectl=1.20.0-00 kubelet=1.20.0-00 -y
- kubeadm init
- mkdir -p $HOME/.kube
- sudo cp -i /etc/kubernetes/admin.conf $HOME/.kube/config
- sudo chown $(id -u):$(id -g) $HOME/.kube/config
- kubectl apply -f https://docs.projectcalico.org/v3.9/manifests/calico.yaml
- kubectl apply -f https://raw.githubusercontent.com/kubernetes/ingress-nginx/controller-v0.49.0/deploy/static/provider/baremetal/deploy.yaml
- kubeadm token create --print-join-command
- kubectl get nodes
- kubectl get nodes -o wide
- kubectl get nodes
- vi 'my-cintainer.yaml'
- kubectl apply -f my-cintainer.yaml
- kubectl get deployments
- kubectl get nodes -o wide
- kubectl get deployments
- kubectl get pods -l app=my-cintainer
- vi 'my-cintainer.yaml'
- kubectl get pods -l app=my-container
- kubectl describe deployment my-container-deployment
- kubectl get pods -l app=my-container
- kubectl logs my-container-deployment-5dfb5bfdf5-56zp7
- kubectl get pods -o wide
